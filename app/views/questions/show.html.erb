<p style="color: green"><%= notice %></p>

<div class="flex justify-between items-center w-full">
  <div class="font-bold text-2xl">問題詳細</div>
  <div class="flex gap-x-2">
    <%= link_to "編集", edit_question_path(@question), class: "btn btn-outline btn-success" %>
    <%= button_to "削除", @question, method: :delete, class: "btn btn-outline btn-error", data: { turbo_confirm: "削除しますか？" } %>
  </div>
</div>

<div class="w-full">
  <div class="divider divider-neutral"></div>
</div>

<div class="my-8">
  <div class="card">
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-bold"><%= @question.content %></h2>
      <button class="btn" onclick="my_modal_<%= @question.id %>.showModal()">回答を見る</button>
      <dialog id="my_modal_<%= @question.id %>" class="modal">
        <div class="modal-box">
          <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
          </form>
          <h3 class="text-lg font-bold">回答</h3>
          <%= @question.answer %>
        </div>
      </dialog>
    </div>
  </div>
</div>

<div class="w-full">
  <div class="divider divider-neutral"></div>
</div>

<div>
  <%= link_to "一問一答一覧", questions_path, class: "btn" %>
</div>
