<p style="color: green"><%= notice %></p>

<% content_for :title, "一問一答" %>

<div class="w-full">
  <div class="font-bold text-2xl">問題一覧</div>
</div>

<div class="w-full">
  <div class="divider divider-neutral"></div>
</div>

<div id="questions">
  <% @questions.each do |question| %>
    <div class="card bg-base-100 shadow p-6 space-y-4">
      <h2 class="text-xl font-bold"><%= question.content %></h2>
      <p class="text-base">
        <span class="font-semibold">回答：</span>
        <%= question.answer %>
      </p>
    </div>
  <% end %>
</div>

<div class="w-full">
  <div class="divider divider-neutral"></div>
</div>

<%= link_to "新しい問題を作る", new_question_path, class: "btn" %>
